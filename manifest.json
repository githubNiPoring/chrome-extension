{
  "manifest_version": 3,
  "name": "GPTx Chat",
  "version": "1.0",
  "description": "Develope by Ghost-IT-TEAM",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://chrome-extension-api.vercel.app/chat*"],
  "icons": {
    "128": "./icons/128.png",
    "48": "./icons/48.png",
    "32": "./icons/32.png",
    "16": "./icons/16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
